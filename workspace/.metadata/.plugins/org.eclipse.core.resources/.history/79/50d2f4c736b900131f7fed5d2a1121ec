		      }
		      
		      str = appendOrReplaceAlarm(alarm_line, str, alarm_number);
      	//  }
       // }
        /*
        alarm_line = "alarmALnumber timeALhour:ALmin lengthALduration days[M:Y,T:Y,W:Y,H:Y,F:Y,S:Y,U:Y]";
        //str = str.replace("ALnumber",Integer.toString(alarm_number));
